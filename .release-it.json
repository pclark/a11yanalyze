{
  "git": {
    "requireUpstream": false,
    "requireCommits": true,
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "releaseNotes": "generate-notes"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": [
      "npm run test",
      "npm run build"
    ]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
} 